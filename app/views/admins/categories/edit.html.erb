<% provide :title, "Cập nhật chuyên mục - #{@category.title}" %>
<div class="col-md-4 col-xs-12">
  <%= render "admins/categories/categories_list", categories: @categories %>
</div>

<div class="col-md-8 col-xs-12">
  <%= render "admins/categories/category_form", category: @category, disable: false %>
</div>

<div class="row">
  <div class="col-md-12 col-lg-8 col-sm-12">
    <div class="white-box">
      <h3 class="box-title">DANH SÁCH NGƯỜI DÙNG</h3>
      <%= render "admins/users/search", link_path: edit_admins_category_path(@category), action: :add %>
      <div class="comment-center p-t-10 users-ajax-list">
        <%= render "admins/users/users_list", users: @users, add_morderator: true, source: @category, action: :add %>
      </div>
    </div>
  </div>
  <div class="col-lg-4 col-md-6 col-sm-12">
    <div class="panel">
      <div class="sk-chat-widgets">
        <div class="panel panel-default">
          <div class="panel-heading">
            DANH SÁCH MORDERATORS
            <%= render "admins/users/search", link_path: edit_admins_category_path(@category), action: :remove %>
          </div>
          <div class="panel-body">
            <%= render "admins/users/users_list", users: @morderators, add_morderator: true, source: @category, action: :remove %>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12 col-lg-8 col-sm-12">
    <div class="white-box">
      <h3 class="box-title">DANH SÁCH TÁC GIẢ</h3>
      <%= render "admins/users/search", link_path: edit_admins_category_path(@category), action: :ban %>
      <div class="comment-center p-t-10">
        <%= render "admins/users/users_list", users: @authors, add_morderator: true, source: @category, action: :ban %>
      </div>
    </div>
  </div>
  <div class="col-lg-4 col-md-6 col-sm-12">
    <div class="panel">
      <div class="sk-chat-widgets">
        <div class="panel panel-default">
          <div class="panel-heading">
            DANH SÁCH BANNING USERS
            <%= render "admins/users/search", link_path: edit_admins_category_path(@category), action: :unban %>
          </div>
          <div class="panel-body">
            <%= render "admins/users/users_list", users: @banning_authors, add_morderator: true, source: @category, action: :unban %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
