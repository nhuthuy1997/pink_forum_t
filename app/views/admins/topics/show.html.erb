<% provide :title, "Cập nhật chủ đề - #{@topic.title}" %>
<%= link_to "Cập nhật chủ đề", edit_admins_topic_path(@topic),
  class: "btn btn-danger pull-right m-l-20 hidden-xs hidden-sm waves-effect waves-light" %>
<div class="clearfix margin-bottom-20"></div>
<div class="col-md-4 col-xs-12">
  <%= render "admins/categories/categories_list", categories: @categories %>
  <%= render "admins/topics/topics_list", topics: @topics %>
</div>

<div class="col-md-8 col-xs-12">
  <%= render "admins/topics/topic_form", topic: @topic, categories: @categories, disable: true %>
</div>

<div class="whitebox">
  <div class="col-lg-4 col-sm-6 col-xs-12">
    <div class="white-box analytics-info">
      <ul class="list-inline two-part">
        <li>
          <h3 class="box-title">Bài viết</h3>
        </li>
        <li class="text-right"><span class="counter text-success"><%= @posts.size %></span></li>
      </ul>

      <%= render "admins/posts/posts_list", posts: @posts %>
      <%= link_to "Quản lý bài viết", admins_posts_path %>
    </div>
  </div>

  <div class="col-lg-4 col-sm-6 col-xs-12">
    <div class="white-box analytics-info">
      <ul class="list-inline two-part">
        <li>
          <h3 class="box-title">Số votes</h3>
        </li>
        <li class="text-right"><span class="counter text-success"><%= @topic.total_votes %></span></li>

        <li>
          <h3 class="box-title">Lượt xem</h3>
        </li>
        <li class="text-right"><span class="counter text-success"><%= @topic.total_views %></span></li>
      </ul>
    </div>
  </div>

  <div class="col-lg-4 col-sm-6 col-xs-12">
    <div class="white-box analytics-info">
      <ul class="list-inline two-part">
        <li>
          <h3 class="box-title">Banning users</h3>
        </li>
        <li class="text-right"><span class="counter text-success"><%= @topic.users.size %></span></li>
      </ul>

      <%= link_to "Quản lý banning users", edit_admins_topic_path(@topic) %>
    </div>
  </div>
</div>
